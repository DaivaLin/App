<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_structures_level2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sinni.app.Structures_level2">

    <TextView
        android:text="第二級"
        android:layout_width="match_parent"
        android:id="@+id/textView4"
        android:textSize="36sp"
        android:textAlignment="center"
        android:layout_height="60dp" />

    <ImageView
        app:srcCompat="@drawable/allsurrounded"
        android:id="@+id/allsurrounded"
        android:layout_weight="1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/leftthreepacks"
        android:id="@+id/leftthreepacks"
        android:layout_weight="1"
        android:layout_alignTop="@+id/allsurrounded"
        android:layout_alignLeft="@+id/topleftpackage"
        android:layout_alignStart="@+id/topleftpackage" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/onthethreebags"
        android:id="@+id/onthethreebags"
        android:layout_weight="1"
        android:layout_alignTop="@+id/allsurrounded"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/rightupperpackage"
        android:id="@+id/rightupperpackage"
        android:layout_weight="1"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/allsurrounded"
        android:layout_alignStart="@+id/allsurrounded" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/topleftpackage"
        android:id="@+id/topleftpackage"
        android:layout_weight="1"
        android:layout_alignTop="@+id/rightupperpackage"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/leftlowerpack"
        android:id="@+id/leftlowerpack"
        android:layout_weight="1"
        android:layout_alignTop="@+id/rightupperpackage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="80dp"
        app:srcCompat="@drawable/underthethreepacks"
        android:id="@+id/underthethreepacks"
        android:layout_weight="1"
        android:layout_height="80dp"
        android:layout_below="@+id/rightupperpackage"
        android:layout_alignLeft="@+id/rightupperpackage"
        android:layout_alignStart="@+id/rightupperpackage"
        android:layout_marginTop="45dp" />

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/multiple_actions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        fab:fab_addButtonColorNormal="#00000000"
        fab:fab_addButtonColorPressed="@color/white_pressed"
        fab:fab_addButtonPlusIconColor="@color/half_black"
        fab:fab_labelStyle="@style/fab_button_style"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_weight="1">
    </com.getbase.floatingactionbutton.FloatingActionsMenu>
</RelativeLayout>
